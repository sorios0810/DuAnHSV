@{
    ViewBag.Title = "Quên mật khẩu";
    ViewBag.ImageURL = "/Images/ImagesCollection/quen-mat-khau.jpg";
    ViewBag.Decription = "";
    ViewBag.Tag = "Quên mật khẩu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section scripts{
    <!--check đăng nhập quên mật khẩu, đổi thông tin cá nhân,...-->
    <script src="~/Assets/Client/js/checkuseraccount.js"></script>
}
@using (Html.BeginForm("ForgotPassword", "Account", null, FormMethod.Post))
{
    <main class="main">
        <div class="login-page bg-image pt-8 pb-8 pt-md-12 pb-md-12 pt-lg-17 pb-lg-17" style="background-image: url('/Assets/Client/images/backgrounds/bg_3.jpg')">
            <div class="container">
                <div class="form-box">
                    <div class="form-tab">
                        <ul class="nav nav-pills nav-fill">
                            <li class="nav-item">
                                <a class="nav-link active">Quên mật khẩu</a>
                            </li>
                        </ul>
                        <div class="user-form mt-3">
                            <form method="POST" id="Forgotpassword" class="needs-validation">
                                <div class="text-success">
                                    @ViewBag.Message1
                                </div>
                                <div class="text-danger">
                                    @ViewBag.Message2
                                </div>
                                <div class="mb-3 mt-1">
                                    <label class="mb-1 text-muted" for="password">Email *</label>
                                    @Html.TextBox("EmailID", "", new { @class = "form-control", @id = "Emailforgot", @required = "required", @type = "email", placeholder = "Nhập email bạn đăng ký ở đây"  })
                                    <div class="invalid-feedback">
                                        Email is invalid
                                    </div>
                                </div>
                            </form>
                            <div class="form-group mb-2">
                                <button class="btn w-100 btn-outline-primary-2" onclick="ForgotPass()" type="submit">
                                    <span>Lấy lại mật khẩu</span>
                                    <i class="icon-long-arrow-right"></i>
                                </button>
                                <!--end::Button-->
                            </div>
                            <div class="py-3 border-0 ">
                                <div class="text-center">
                                    <!--begin::button-->
                                    Bạn đã nhớ mật khẩu? <a href="@Url.Action("SignIn", "Account")" class="font_roboto_bold">Đăng nhập</a> @*nếu bạn chưa có tài khoản thì ấn vào đăng ký*@
                                    <!--end::Button-->
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
}