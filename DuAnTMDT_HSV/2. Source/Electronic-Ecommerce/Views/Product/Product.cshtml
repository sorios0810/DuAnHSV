                                                    <div class="rating">
                                                        <div class="center">
                                                            @for (int i = 1; i <= 5; i++)
                                                            {
                                                                <i class="icon-star-o" aria-hidden="true"></i>
                                                            }
                                                        </div>
                                                    </div>
                                                }

                                            }
